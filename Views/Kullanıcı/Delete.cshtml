@model KutuphaneOtomasyonSistemi.Models.Kullanıcı

@{
    ViewData["Title"] = "Sil";
}

<h1>Kullanıcıyı Sil</h1>

<h3>Bu kullanıcıyı silmek istediğinize emin misiniz?</h3>
<div>
    <h4>@Model.Ad</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Soyad</dt>
        <dd class="col-sm-10">@Model.Soyad</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">KullanıcıAdı</dt>
        <dd class="col-sm-10">@Model.KullanıcıAdı</dd>

        <dt class="col-sm-2">Şifre</dt>
        <dd class="col-sm-10">@Model.Şifre</dd>

        <dt class="col-sm-2">TelefonNumarası</dt>
        <dd class="col-sm-10">@Model.TelefonNumarası</dd>

        <dt class="col-sm-2">Adres</dt>
        <dd class="col-sm-10">@Model.Adres</dd>

        <dt class="col-sm-2">Durum</dt>
        <dd class="col-sm-10">@Model.Durum</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="KullanıcıID" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Geri Dön</a>
    </form>
</div>

