@model KutuphaneOtomasyonSistemi.Models.Ödünç

@{
    ViewData["Title"] = "Yeni Ödünç Ekle";
}

<h1>Yeni Ödünç Ekle</h1>

<form asp-action="Create">

    <div class="form-group">
        <label asp-for="Durum" class="control-label"></label>
        <input asp-for="Durum" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="İadeTarihi" class="control-label"></label>
        <input asp-for="İadeTarihi" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="KitapID" class="control-label"></label>
        <select asp-for="KitapID" class="form-control" asp-items="ViewBag.KitapListesi"></select>
        <span asp-validation-for="KitapID" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="ÜyeID" class="control-label"></label>
        <select asp-for="ÜyeID" class="form-control" asp-items="ViewBag.ÜyeListesi"></select>
        <span asp-validation-for="ÜyeID" class="text-danger"></span>
    </div>



    <button type="submit" class="btn btn-success">Kaydet</button>
</form>
