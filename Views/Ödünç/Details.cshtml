@model KutuphaneOtomasyonSistemi.Models.Ödünç

@{
    ViewData["Title"] = "Ödünç Detayları";
}

<h1>Ödünç Detayları</h1>

<div>
    <h4>@Model.ÖdünçID</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Kitap.Başlık</dt>
        <dd class="col-sm-10">@Model.Kitap?.Başlık</dd>

        <dt class="col-sm-2">Üye.TCKimlikNo</dt>
        <dd class="col-sm-10">@Model.Üye?.TCKimlikNo</dd>

        <dt class="col-sm-2">Durum</dt>
        <dd class="col-sm-10">@Model.Durum</dd>

        <dt class="col-sm-2">İadeTarihi</dt>
        <dd class="col-sm-10">@Model.İadeTarihi</dd>

    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.ÖdünçID">Düzenle</a> |
    <a asp-action="Index">Geri Dön</a>
</p>
