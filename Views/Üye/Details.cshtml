@model KutuphaneOtomasyonSistemi.Models.Üye

@{
    ViewData["Title"] = "Üye Detayları";
}

<h1>Üye Detayları</h1>

<div>
    <h4>@Model.ÜyeID</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">TCKimlikNo</dt>
        <dd class="col-sm-10">@Model.TCKimlikNo</dd>

        <dt class="col-sm-2">TelefonNo</dt>
        <dd class="col-sm-10">@Model.TelefonNo</dd>

        <dt class="col-sm-2">Eposta</dt>
        <dd class="col-sm-10">@Model.Eposta</dd>

        <dt class="col-sm-2">Adres</dt>
        <dd class="col-sm-10">@Model.Adres</dd>

        <dt class="col-sm-2">Durum</dt>
        <dd class="col-sm-10">@Model.Durum</dd>

    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.ÜyeID">Düzenle</a> |
    <a asp-action="Index">Geri Dön</a>
</p>

