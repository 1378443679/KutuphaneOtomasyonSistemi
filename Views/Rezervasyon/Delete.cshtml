@model KutuphaneOtomasyonSistemi.Models.Rezervasyon

@{
    ViewData["Title"] = "Sil";
}

<h1>Rezervasyonu Sil</h1>

<h3>Bu rezervasyonu silmek istediğinize emin misiniz?</h3>
<div>
    <h4>@Model.RezervasyonID</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Kullanıcı</dt>
        <dd class="col-sm-10">@Model.Kullanıcı?.KullanıcıAdı</dd>

        <dt class="col-sm-2">Kitap</dt>
        <dd class="col-sm-10">@Model.Kitap?.Başlık</dd>

        <dt class="col-sm-2">RezervasyonTarihi</dt>
        <dd class="col-sm-10">@Model.RezervasyonTarihi</dd>

        <dt class="col-sm-2">GeçerlilikSüresi</dt>
        <dd class="col-sm-10">@Model.GeçerlilikSüresi</dd>

        <dt class="col-sm-2">Durum</dt>
        <dd class="col-sm-10">@Model.Durum</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="RezervasyonID" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Geri Dön</a>
    </form>
</div>
