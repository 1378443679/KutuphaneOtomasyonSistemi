@model KutuphaneOtomasyonSistemi.Models.Kategori

@{
    ViewData["Title"] = "Yeni Kategori Ekle";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="KategoriAdı" class="control-label"></label>
        <input asp-for="KategoriAdı" class="form-control" />
        <span asp-validation-for="KategoriAdı" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Ekle</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
