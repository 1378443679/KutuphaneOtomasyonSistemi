@model KutuphaneOtomasyonSistemi.Models.Rol

@{
    ViewData["Title"] = "Yeni Rol Ekle";
}

<h1>Yeni Rol Ekle</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <input type="hidden" asp-for="RolID" />

        <label asp-for="RolAdı" class="control-label"></label>
        <input asp-for="RolAdı" class="form-control" />
    </div>
    
    <div class="form-group">

        <label asp-for="Durum" class="control-label"></label>
        <input asp-for="Durum" class="form-control" />
    </div>
   
    <div class="form-group">
        <select asp-for="Kullanıcılar" asp-items="ViewBag.KullanıcıListesi" class="form-control"></select>

    </div>
    <button type="submit" class="btn btn-success">Kaydet</button>
</form>

