@model KutuphaneOtomasyonSistemi.Models.Kitap

@{
    ViewData["Title"] = "Yeni Kitap Ekle";
}

<h1>Yeni Kitap Ekle</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <input type="hidden" asp-for="KitapID" />

        <label asp-for="Başlık" class="control-label"></label>
        <input asp-for="Başlık" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Yazar" class="control-label"></label>
        <input asp-for="Yazar" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Yayıncı" class="control-label"></label>
        <input asp-for="Yayıncı" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ISBN" class="control-label"></label>
        <input asp-for="ISBN" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="YayınYılı" class="control-label"></label>
        <input asp-for="YayınYılı" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SayfaSayısı" class="control-label"></label>
        <input asp-for="SayfaSayısı" class="form-control" />
    </div>
    <div class="form-group">
        <select asp-for="KategoriID" asp-items="ViewBag.KategoriListesi" class="form-control"></select>

    </div>
    <button type="submit" class="btn btn-success">Kaydet</button>
</form>
